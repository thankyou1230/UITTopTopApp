<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TOPTOP.ResetPasswordPage"
             BackgroundColor="Black">
    <ContentPage.Content>
        <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center">
            <Entry Placeholder="Nhập email của bạn" WidthRequest="300" x:Name="email"/>
            <Label Text="Vui lòng nhập một email" TextColor="Red" FontSize="Small" FontAttributes="Italic" Margin="-60,0,0,0" x:Name="status"/>
            <Button Text="Đặt lại mật khẩu" x:Name="ResetBtn" BackgroundColor="#FF66C4" TextColor="Black" Clicked="Button_Clicked" WidthRequest="300" Margin="0,30,0,0" />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>